{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "outDir": "../out-tsc/app",
        "baseUrl": "./",
        "paths": {
            "@shared/*": [
                "app/shared/*"
            ],
            "@core/*": [
                "app/core/*"
            ],
            "@admin/*": [
                "app/admin/*"
            ],
            "@models/*": [
                "app/shared/models/*"
            ],
            "@templates": [
                "templates/index"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ]
        }
    },
    "exclude": [
        "**/translations.ts",
        "**/templates/*.ts",
        "setupJest.ts",
        "**/*.spec.ts",
        "app/tools/gen-mapper/gen-map.ts"
    ]
}
