{
    "compileOnSave": false,
    "angularCompilerOptions": {
        "enableIvy": false,
        "preserveWhitespaces": false
    },
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "module": "esnext",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "@shared/*": [
                "src/app/shared/*"
            ],
            "@core/*": [
                "src/app/core/*"
            ],
            "@admin/*": [
                "src/app/admin/*"
            ],
            "@templates": [
                "src/templates/index"
            ],
            "lodash": [
                "../node_modules/lodash-es"
            ]
        }
    }
}
